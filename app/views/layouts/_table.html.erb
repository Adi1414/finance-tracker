
<% if !@ticker.empty? %>
<div class="col-sm-9">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @ticker.each do |ticker| %>
    <tr>
      <td><%= ticker.ticker %></td>
      <td><%= ticker.name %></td>
      <td><%= ticker.last_price %></td>
      <td> <%= link_to 'Remove', user_stock_path(ticker), method: :delete, 
                                 data: {confirm: 'Are you sure?'},class: 'btn btn-sm btn-warning' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% end %>